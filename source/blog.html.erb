---
layout: blog
pageable: true
per_page: 30
---

<div class="grid-parent box collapse">
  <div class='grid-100 content'>
    <% page_articles.each_with_index do |article, i| %>
      <%- link_to article do %>
      <div class='content tiledbox grid-50 tablet-grid-50 mobile-grid-100'>
        <h2><%= article.title %><br /><span><%= article.date.strftime('%b %e %Y') %></span></h2>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

<% if paginate %>
<div class="grid-parent box">
  <div class='grid-100 content shortbox'>
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      <% if num_pages > 1 %>
        <%= page_number %> of <%= num_pages %> pages &nbsp;&nbsp;
      <% end %>
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>
  </div>
</div>
<% end %>

