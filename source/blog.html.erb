---
layout: page
pageable: true
per_page: 30
hide_blog: true
---

<div id='content'>
  <div id='articles'>
    <h2>Recent Writings</h2>

    <% page_articles.each_with_index do |article, i| %>
    <div class='article-preview'>
      <h2><%= link_to article.title, article %></h2>
      <span class='published'>published <%= article.date.strftime('%b %e %Y') %></span>
      <% if article.tags.any? %>
        -
        <span class='tagged'>in <%= article.tags.map{ |t| link_to t, tag_path(t) }.join(', ') %></span>
      <% end %>
    </div>
    <% end %>
  </div>

  <div class='shortbox'>
    <% if prev_page %><%= link_to 'Previous page', prev_page %><% end %>
    <% if num_pages > 1 %><%= page_number %> of <%= num_pages %> pages &nbsp;&nbsp;<% end %>
    <% if next_page %><%= link_to 'Next page', next_page %><% end %>
  </div>
</div>

<div id='left-bar'>
  <h3>Filter by Tag</h3>
  <% blog.tags.each do |tag, articles| %>
    <%= link_to "#{tag} (#{articles.size})", tag_path(tag) %><br />
  <% end %>
</div>
