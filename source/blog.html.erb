---
layout: blog
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
<div class="grid-parent box collapse" id='article-<%= i %>'>
  <div class='grid-100 content'>
    <%- link_to article do %>
      <div class='content tiledbox grid-50 tablet-grid-50 mobile-grid-100'>
      <h2><%= article.title %><br /><span><%= article.date.strftime('%b %e %Y') %></span></h2>
      </div>
    <% end %>
  </div>
  </div>
</div>
<% end %>

<% if paginate %>
<div class="grid-parent box">
  <div class='grid-100 content'>
    <% if num_pages > 1 %>
    <div class='shortbox grid-100'>
      <%= page_number %> of <%= num_pages %> pages
    </div>
    <% end %>
    <div class='shortbox grid-50'>
      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    </div>
    <div class='shortbox grid-50'>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    </div>
  </div>
</div>
<% end %>

