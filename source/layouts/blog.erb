<% wrap_layout :page do %>
  <%= yield %>

  <div class="grid-parent box collapse footer grid-100" id='more-blog-articles'>
    <div class='grid-33 tablet-grid-33 mobile-grid-100 footer-box'>
      <h5>Recent Articles</h5>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><span><%= article.date.strftime('%b %e') %></span> <%= link_to article.title, article %></li>
        <% end %>
      </ol>
    </div>

    <div class='grid-33 tablet-grid-33 mobile-grid-100 footer-box'>
      <h5>Tags</h5>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </ol>
    </div>

    <div class='grid-33 tablet-grid-33 mobile-grid-100 footer-box'>
      <h5>By Year</h5>
      <ol>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </ol>
    </div>

  </div>
<% end %>
