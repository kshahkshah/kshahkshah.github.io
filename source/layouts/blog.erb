<% @title ||= current_article.title unless current_article.nil? %>
<% @content_for_atom = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

<% wrap_layout :page do %>
  <%= yield %>

  <div class="grid-parent box collapse footer" id='more-blog-articles'>
    <div class='grid-33 footer-box'>
      <h5>Recent Articles</h5>
    </div>
    <div class='grid-33 footer-box'>
      <h5>Tags</h5>
    </div>
    <div class='grid-33 footer-box'>
      <h5>By Year</h5>
    </div>
    <ol class='grid-33 footer-box'>
      <% blog.articles[0...10].each do |article| %>
        <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
      <% end %>
    </ol>

    <ol class='grid-33 footer-box'>
      <% blog.tags.each do |tag, articles| %>
        <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
      <% end %>
    </ol>

    <ol class='grid-33 footer-box'>
      <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
        <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
      <% end %>
    </ol>
  </div>
<% end %>
